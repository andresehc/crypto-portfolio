
<div id="carouselHome" class="carousel slide carousel-fade" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=image_tag("fotin.jpg", class:"d-block w-100 ", alt:"First slide" )%>
    </div>
    <div class="carousel-item">
      <%=image_tag("foto.jpg", class:"d-block w-100 img-responsive", alt:"Second slide" )%>
    </div>
    <div class="carousel-item">
      <%=image_tag("indexxx.jpg", class:"d-block w-100 img-responsive", alt:"Third slide" )%>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselHome" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>